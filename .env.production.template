# =====================================
# NEON MURER CMS - PRODUCTION ENVIRONMENT
# =====================================
# 
# WICHTIG: Diese Datei ist eine Template für Production!
# 1. Kopiere diese Datei zu ".env" 
# 2. Fülle ALLE Werte mit sicheren Production-Daten
# 3. Verwende starke, einzigartige Passwörter und Secrets
# 4. Aktiviere HTTPS und alle Sicherheitsfeatures
#
# NIEMALS: Echte Production-Secrets in Git committen!
# =====================================

# =====================================
# UMGEBUNGS-KONFIGURATION
# =====================================
NODE_ENV=production
PORT=3001
DEPLOYMENT_ENV=production

# =====================================
# DATENBANK-KONFIGURATION (KRITISCH!)
# =====================================
# Beispiel für PostgreSQL Production:
# DATABASE_URL="postgresql://username:password@localhost:5432/neon_murer_cms_prod"
# 
# Beispiel für externe DB (Heroku, AWS RDS, etc.):
# DATABASE_URL="postgresql://username:password@db-host.amazonaws.com:5432/neon_murer_cms"
DATABASE_URL="YOUR_PRODUCTION_DATABASE_URL_HERE"

# Database Connection Pool Settings
DATABASE_MAX_CONNECTIONS=20
DATABASE_CONNECTION_TIMEOUT=60000
DATABASE_IDLE_TIMEOUT=600000

# =====================================
# JWT & AUTHENTIFIZIERUNG (KRITISCH!)
# =====================================
# WICHTIG: Generiere einen starken, einzigartigen JWT Secret!
# Empfehlung: Mindestens 64 Zeichen, zufällig generiert
# Beispiel: openssl rand -base64 64
JWT_SECRET="YOUR_SUPER_SECURE_JWT_SECRET_MINIMUM_64_CHARS_RANDOM_GENERATED"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# =====================================
# ADMINISTRATOR-KONFIGURATION
# =====================================
ADMIN_EMAIL="admin@neonmurer.ch"
ADMIN_PASSWORD="YOUR_SUPER_SECURE_ADMIN_PASSWORD"
ADMIN_NAME="Administrator"

# =====================================
# FRONTEND & DOMAINS
# =====================================
# Deine Production-Domain
FRONTEND_URL="https://www.neonmurer.ch"
ALLOWED_ORIGINS="https://www.neonmurer.ch,https://neonmurer.ch,https://cms.neonmurer.ch"

# =====================================
# DATEI-UPLOAD KONFIGURATION
# =====================================
MAX_FILE_SIZE="50mb"
UPLOAD_DIR="./uploads"
# Alternative: Verwende Cloud-Storage
# AWS_S3_BUCKET="your-bucket-name"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="eu-central-1"

# =====================================
# EMAIL-KONFIGURATION (SMTP)
# =====================================
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT="587"
SMTP_SECURE="true"
SMTP_USER="your-email@neonmurer.ch"
SMTP_PASS="your-email-password"
SMTP_FROM="noreply@neonmurer.ch"

# =====================================
# MONITORING & ERROR TRACKING
# =====================================
# Sentry DSN für Production Error-Tracking
# Registriere dich bei sentry.io und hole dir deinen DSN
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENVIRONMENT="production"
SENTRY_TRACES_SAMPLE_RATE="0.1"
SENTRY_PROFILES_SAMPLE_RATE="0.1"

# =====================================
# LOGGING-KONFIGURATION
# =====================================
LOG_LEVEL="warn"
LOG_TO_FILE="true"
LOG_DIR="/var/log/neon-murer-cms"
LOG_MAX_FILES="30"
LOG_MAX_SIZE="100m"

# =====================================
# SICHERHEITS-KONFIGURATION
# =====================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=5

# HTTPS Configuration (KRITISCH für Production!)
HTTPS_ENABLED="true"
HTTPS_PORT="443"
SSL_KEY_PATH="/path/to/private-key.pem"
SSL_CERT_PATH="/path/to/certificate.pem"
SSL_CA_PATH="/path/to/ca-certificate.pem"

# HTTP Strict Transport Security
HSTS_MAX_AGE="31536000"
HSTS_INCLUDE_SUBDOMAINS="true"
HSTS_PRELOAD="true"

# =====================================
# PERFORMANCE & LIMITS
# =====================================
MAX_JSON_SIZE="10mb"
MAX_URL_ENCODED_SIZE="10mb"
REQUEST_TIMEOUT="30000"
MAX_CONCURRENT_REQUESTS="1000"

# Memory Management
NODE_OPTIONS="--max-old-space-size=2048"
UV_THREADPOOL_SIZE="16"

# =====================================
# HEALTH-CHECKS & MONITORING
# =====================================
HEALTH_CHECK_ENABLED="true"
METRICS_ENABLED="true"
HEALTH_CHECK_SECRET="your-health-check-secret"

# =====================================
# EXTERNE DIENSTE & API-KEYS
# =====================================
# Google Analytics & Tag Manager
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
GOOGLE_TAG_MANAGER_ID="GTM-XXXXXXX"

# Weitere API-Keys (nach Bedarf)
RECAPTCHA_SITE_KEY=""
RECAPTCHA_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""

# =====================================
# ALERT-KONFIGURATION
# =====================================
ALERT_EMAIL="alerts@neonmurer.ch"
ALERT_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
CRITICAL_ALERT_ENABLED="true"

# Emergency Contact
EMERGENCY_CONTACT="emergency@neonmurer.ch"
EMERGENCY_PHONE="+41552255025"

# =====================================
# BACKUP & DISASTER RECOVERY
# =====================================
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"
BACKUP_S3_BUCKET="neon-murer-backups"

# =====================================
# CDN & ASSET-MANAGEMENT
# =====================================
# CloudFlare oder andere CDN-Konfiguration
CDN_URL="https://cdn.neonmurer.ch"
ASSET_BASE_URL="https://assets.neonmurer.ch"

# =====================================
# CONTAINER & ORCHESTRIERUNG
# =====================================
# Für Docker/Kubernetes Deployments
CONTAINER_NAME="neon-murer-cms"
KUBERNETES_NAMESPACE="production"
SERVICE_ACCOUNT="neon-murer-service"

# =====================================
# COMPLIANCE & DATENSCHUTZ
# =====================================
GDPR_COMPLIANCE="true"
COOKIE_CONSENT_REQUIRED="true"
DATA_RETENTION_DAYS="365"
PRIVACY_POLICY_URL="https://www.neonmurer.ch/datenschutz"

# =====================================
# DEVELOPMENT/STAGING OVERRIDES
# =====================================
# Diese Variablen können für Staging-Umgebungen angepasst werden
# STAGING_MODE="false"
# DEBUG_MODE="false"
# VERBOSE_LOGGING="false"

# =====================================
# ZUSÄTZLICHE SICHERHEITS-HEADERS
# =====================================
CONTENT_SECURITY_POLICY_REPORT_URI="https://neonmurer.report-uri.com/r/d/csp/enforce"
SECURITY_CONTACT="security@neonmurer.ch"

# =====================================
