{
  "name": "neon-murer-cms",
  "version": "1.0.0",
  "description": "Content Management System f√ºr Neon Murer Website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest tests/api",
    "test:integration": "jest tests/integration",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm run test && npm run test:e2e",
    "migrate": "npx prisma migrate dev",
    "studio": "npx prisma studio",
    "seed": "node prisma/seed.js",
    "env:setup": "node scripts/env-manager.js setup",
    "env:create": "node scripts/env-manager.js create",
    "env:validate": "node scripts/env-manager.js validate",
    "env:secrets": "node scripts/env-manager.js secrets",
    "env:docs": "node scripts/env-manager.js docs",
    "env:check": "node scripts/env-manager.js check",
    "env:backup": "node scripts/env-manager.js backup",
    "env:prod": "node scripts/env-manager.js create production",
    "env:staging": "node scripts/env-manager.js create staging",
    "migrate:deploy": "npx prisma migrate deploy",
    "migrate:reset": "npx prisma migrate reset",
    "db:pull": "npx prisma db pull",
    "db:push": "npx prisma db push",
    "generate": "npx prisma generate",
    "postinstall": "npm run generate",
    "build": "echo 'Production build complete'",
    "production": "NODE_ENV=production npm start",
    "staging": "NODE_ENV=staging npm start",
    "health": "curl -s http://localhost:3835/api/health | cat",
    "health:detailed": "curl -s http://localhost:3835/api/health/detailed | cat",
    "logs": "tail -f logs/combined-$(date +%Y-%m-%d).log",
    "backup": "npm run env:backup",
    "create-admin": "node scripts/create-admin-user.js"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@sentry/node": "^9.41.0",
    "@sentry/profiling-node": "^9.41.0",
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^10.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "glob": "^11.0.3",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "prisma": "^5.7.0",
    "sharp": "^0.32.6",
    "ua-parser-js": "^1.0.40",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cypress": "^14.5.4",
    "imagemin": "^9.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-webp": "^8.0.0",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "lighthouse": "^12.8.1",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0",
    "supertest": "^7.1.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "keywords": [
    "cms",
    "content-management",
    "neon-murer",
    "website"
  ],
  "author": "Neon Murer",
  "license": "MIT"
}
